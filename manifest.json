{
    "manifest_version": 2,
    "name": "Page Observer",
    "version": "0.0",

    "description" : "",

    "browser_action" : {
	"default_popup" : "popup.html"
    },

    "background" : {
	"scripts" : ["background.js"],
	"persistent" : false
    },
    "content_scripts" : [
	{
	    "matches" : ["*://*/*"],
	    "js" : ["content.js"]
	}
    ],
    "options_ui": {
	"page": "options.html",
	"chrome_style": false,
	"open_in_tab" : true
    },
    "content_security_policy": "script-src 'self' https://code.jquery.com https://cdnjs.cloudflare.com; object-src 'self'",
    "permissions" : ["notifications", "storage"]
}
