{
    "manifest_version": 2,
    "name": "Page Observer",
    "version": "0.0",

    "description" : "",

    "browser_action" : {
	"default_popup" : "popup.html"
    },

    "background" : {
	"scripts" : ["background.js"],
	"persistent" : false
    },
    "content_scripts" : [
	{
	    "matches" : ["*://*/*"],
	    "js" : ["content.js"]
	}
    ],
    "permissions" : ["notifications", "storage"]
}
